<div class="overview">
	<span class="icon"><i {{bindAttr class="view.opened:icon-chevron-down:icon-chevron-right"}}></i></span>
	<div class="title-name" {{bindAttr title="view.title.title"}}>{{view.title.title}}</div>
		{{#if view.pendingState}}
			{{view Theses.LoadingView}}
		{{else}}
			{{#if view.proccessed}}
				<div class="btn-group">
					<button class="btn disabled">已处理</button>
				</div>
			{{else}}
				<div class="btn-group">
					<button class="btn btn-success" {{action allow target="view"}} title="通过"><i class="icon-white icon-ok"></i></button>
					<button class="btn btn-danger" {{action deny target="view"}} title="否决"><i class="icon-white icon-remove"></i></button>
				</div>
			{{/if}}
		{{/if}}
	
</div>
{{#if view.opened}}
<div class="extended">
	<dl>
  		<dt>Description / 论题说明</dt>
  		<dd>{{view.title.description}}</dd>
  		<dt>Requirements / 要求</dt>
  		<dd>{{view.requirements}}</dd>
  		<dt>Majors / 可选专业</dt>
  		<dd>{{view.avaliableMajors}}</dd>
  		{{#if view.title.teacher}}
  		<dt>Teacher / 指导教师</dt>
  		<dd>{{view.title.teacher.displayName}}</dd>
  		{{/if}}
  		{{#if view.title.students.length}}
  		<dt>Students / 选题学生</dt>
  		{{#each view.title.students}}
  			<dd>{{displayName}}</dd>
  		{{/each}}
  		{{/if}}
	</dl>
</div>
{{/if}}