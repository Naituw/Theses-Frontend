                                        	<option>通信工程</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="control-label">
                                        <label>描述：</label>
                                    </div>
                                    <div class="controls">
                                        <textarea></textarea>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="control-label">
                                        <label>要求：</label>
                                    </div>
                                    <div class="controls">
                                         <textarea></textarea>
                                    </div>
                                </div>
                            </fieldset>
                        </div> 
                        <footer> 
                            <button type="submit" class="blue submit" {{action submit target="view" href=true}}>
                                <span>创建论题</span>
                            </button> 
                        </footer> 
                    </form>