                                <div class="control-group">
                                    <div class="control-label">
                                        <label>论文题目：</label>
                                    </div>
                                    <div class="controls">
                                        <input type="text">
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="control-label">
                                        <label>可选人数：</label>
                                    </div>
