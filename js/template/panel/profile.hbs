                    
                    <form>
                        <input class="upload-avatar hidden-input" type="file" name="avatar">
                    </form>
                    <form novalidate="" autocomplete="on" class="update-profile"> 
                        <div class="profile-basic-info">
                            <div class="avatar">
                                <a class="avatar-hover" {{action updateAvatar target="view"}}>更换头像</a>
                                <img {{bindAttr src="currentUser.avatarURL"}} width="100" height="100" />
                            </div>
                            <div class="info">
                                <label>{{currentUser.username}}</label>
                                <label>{{currentUser.levelType}}</label>
                                <label>{{currentUser.majorInfo.name}}</label>
                                <label>{{currentUser.departmentInfo.name}}</label>
                            </div>
                        </div>
                        <div class="yield">
                            <fieldset>
                                <div class="control-group">
                                    <div class="control-label">
                                        <label>姓名：</label>
                                    </div>
                                    <div class="controls">
                                        <input type="text" placeholder="请输入姓名…" name='name' {{bindAttr value='currentUser.screenname'}}>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="control-label">
                                        <label>性别：</label>
                                    </div>
                                    <div class="controls">
                                        <select name='gender'>
                                            <option value="0">保密</option> 
                                            <option value="1">男</option> 
                                            <option value="2">女</option> 
                                        </select>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="control-label">
                                        <label>邮箱：</label>  
                                    </div>
                                    <div class="controls">
                                        <input type="text" placeholder="请输入电子邮箱…" name='email' {{bindAttr value='currentUser.email'}}>
                                    </div>
                                </div>
                            </fieldset>
                        </div> 
                        <footer> 
                            <button type="submit" class="blue submit" {{action submit target="view" href=true}}>
                                <span>提交</span>
                            </button> 
                        </footer> 
                    </form>