                        </div>
                        <div class="time">09:21 04-11</div>
                    </div>
                </div>
                <div class="message-input-wrapper">
                    <div class="line-separator"></div>
                    <input type="text" />
                    <button class="btn btn-primary btn-mini">发送</button>
                </div>
            </div>
            {{/if}}
