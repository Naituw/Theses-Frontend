<section id="login">
	<header id="login-header">
		Theses 论文管理系统
	</header>
	<div id="login-main">
		<div id="login-alert" class="alert alert-error">
			<strong>登陆失败：</strong><span class="desc">用户名或密码错误</span>
		</div>
		<form class="form-horizontal">
			<div class="control-group">
				<label class="control-label" for="inputUsername">用户名</label>
				<div class="controls">
					<input type="text" id="inputUsername" placeholder="Username">
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="inputPassword">密码</label>
				<div class="controls">
					<input type="password" id="inputPassword" placeholder="Password">
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" id="login-activity"><img src='img/spinner.gif'></label>
				<div class="controls">
					<label class="checkbox">
						<input id="login-remember-me" type="checkbox"> 下次自动登陆
					</label>
					<button id="login-submit-button" class="btn btn-primary" {{action tryLogin href=true}}>
						<i class="icon-ok icon-white"></i>   登陆
					</button>
					<a id="login-forget-button" class="btn" href="mailto:theses.nfsysu@gmail.com">忘记密码?</a>
				</div>
			</div>
		</form>
	</div>
</section>
