<div class="row-fluid">
	<div class="span12">
		<div class="widget-box">
			<div class="widget-title">
				<span class="icon"><i class="icon-folder-open"></i></span>
				<h5>我的论题</h5>
				<div class="buttons">
					<a href="#" class="btn btn-mini" {{action refresh}}>
						<i class="icon-refresh"></i> 刷新
					</a>
					{{#if canAssignNewTitle}}
						<a href="#" class="btn btn-mini" {{action assignNew}}>
							<i class="icon-plus"></i> 出题
						</a>
					{{/if}}
				</div>
			</div>
			<div class="widget-content nopadding">
				{{#with Theses.myTitlesManager}}
					{{#if mytitles.length}}
						<div class="custom-list bordered-list">
							{{#each mytitles}}
								{{view Theses.TitleCell title=this}}
							{{/each}}
						</div>
					{{else}}
						{{view Theses.PromptView text="暂无数据，点击刷新来重新获取论题列表"}}
					{{/if}}

					{{#if loading}}
						{{view Theses.LoadingView}}
					{{else}}
						{{#if hasMore}}
							<div class="load-more-container"><button class="btn btn-large btn-block" {{action loadMore}}>加载更多</button></div>
						{{/if}}
					{{/if}}
				{{/with}}
			</div>
		</div>
	</div>
</div>