{{#if content.loading}}
{{view Theses.LoadingView}}
{{else}}
  {{#if content.loadingFailed}}
  	{{view Theses.PromptView text="论题加载失败，请尝试返回重新获取"}}
  {{else}}


<div class="row-fluid">
	<div class="span12">
		<div class="widget-box">
			<div class="widget-title">
				<span class="icon"><i class="icon-folder-open"></i></span>
				<h5>论题信息</h5>
				
			</div>
			<div class="widget-content">
				<table class="table table-bordered">
					<tr>
						<td><strong>ID</strong></td>
						<td>{{content.titleid}}</td>
					</tr>
					<tr>
						<td><strong>标题</strong></td>
						<td>{{content.title}}</td>
					</tr>
					<tr>
						<td><strong>导师</strong></td>
						<td>{{teacherName}}</td>
					</tr>
					<tr>
						<td><strong>系别</strong></td>
						<td>{{content.departmentName}}</td>
					</tr>
					<tr>
						<td><strong>状态</strong></td>
						<td>{{content.stateName}}</td>
					</tr>
					<tr>
						<td><strong>可选专业</strong></td>
						<td>{{avaliableMajors}}</td>
					</tr>
					<tr>
						<td><strong>说明</strong></td>
						<td>{{content.description}}</td>
					</tr>
					<tr>
						<td><strong>要求</strong></td>
						<td>{{content.require_info}}</td>
					</tr>
				</table>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span12">
		<div class="widget-box">
			<div class="widget-title">
				<span class="icon"><i class="icon-user"></i></span>
				<h5>相关用户</h5>
				<div class="buttons">
					<a href="#" class="btn btn-mini" {{action refreshUsers href=true}}>
						<i class="icon-refresh"></i> 刷新
					</a>
				</div>
			</div>
			<div class="widget-content">
				<div class="related-users">
					<div class="related-teacher">
						<h5>导师</h5>
						<div class="user-cell">
							<img src="http://lwapi-pic.stor.sinaapp.com/user_2_8.png"/>
						</div>
					</div>
					<div class="related-students">
						<h5>选题学生</h5>
						<div class="user-cell">

						</div>
						<div class="user-cell">

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span12">
		<div class="widget-box">
			<div class="widget-title">
				<span class="icon"><i class="icon-file"></i></span>
				<h5>文档列表</h5>
				<div class="buttons">
					<a href="#" class="btn btn-mini" {{action refreshDocuments href=true}}>
						<i class="icon-refresh"></i> 刷新
					</a>
					<a href="#" class="desktop btn btn-mini">
						<i class="icon-upload"></i> 上传新文档
					</a>
				</div>
			</div>
			<div class="widget-content nopadding">
				{{view Theses.PromptView text="暂无数据，请点击刷新重新获取"}}
				{{view Theses.PagingView}}
			</div>
		</div>
	</div>
</div>

  {{/if}}
{{/if}}